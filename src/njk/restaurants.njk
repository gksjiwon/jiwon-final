{% extends '_templates/base.njk' %}

{% block content %}
<article class="container">
  <h1>Top Restaurants of Austin, Texas</h1>
  <p>Intro text here.</p>
<div class="row">
  {% for item in restaurant.restaurants %}
  <div class="col-sm-6 col-lg-6">
    <div class="card" style="width: 18rem;">
      <img src="img/restaurants/{{ restaurant.image }}" class="card-img-top" alt="restaurant photo">
      <div class="card-body">
        <h5 class="card-title">{{ restaurant.name }}</h5>
        <p class="card-text">{{ restaurant.address }}</p>
        <p class="card-text">{{ restaurant.category }}</p>
      </div>
    </div>
  </div>
  {% endfor %}
</div>
</article>
{% endblock %}